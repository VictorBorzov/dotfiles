#GTD
#
#Collection
report.in.columns           = id,description
report.in.description       = Inbox
report.in.filter            = status:pending limit:page (+in)
report.in.labels            = ID,Description

#Brain Power

uda.power.type=string
uda.power.label=Power
uda.power.values=H,M,L
uda.power.default=M

#Reports

#Next
report.next.description     = Most urgent tasks
report.next.columns         = id,urgency,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description,power
report.next.filter          = status:pending -sdm
report.next.labels          = ID,Urgency,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description,Power
report.next.sort            = urgency-,priority-,project-,power-,

#Someday/Maybe
report.sdm.description     = Someday/Maybe
report.sdm.columns         = id,urgency,depends,priority,project,tags,recur,scheduled.countdown,due.remaining,until.remaining,description,power
report.sdm.filter          = status:pending +sdm
report.sdm.labels          = ID,Urgency,Depends,Priority,Project,Tag,Recur,Scheduled,Due,Until,Description,Power

#No Next action
report.nna.description     = No Next Action
report.nna.columns         = project
report.nna.filter          = +PENDING +READY -next -waiting -sdm
report.nna.labels          = Project

#Estimate

uda.estimate.type=numeric
uda.estimate.label=Estimate

context.car=+@car or +@online or +@phone
context.online=+@ol
context.farm=+@farm or +@phone or +@online or +@pc or +@shop

tasksh.autoclear=1
uda.reviewed.type=date
uda.reviewed.label=Reviewed
report._reviewed.description=Tasksh review report.  Adjust the filter to your needs.
report._reviewed.columns=uuid
report._reviewed.sort=reviewed+,modified+
report._reviewed.filter=( reviewed.none: or reviewed.before:now-6days ) and ( +PENDING or +WAITING )
context.work.read=project:work
context.work.write=project:work
context.study.read=project:study
context.study.write=project:study
context=work
