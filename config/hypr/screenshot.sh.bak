#!/usr/bin/env sh

DIR="$HOME/Pictures/Screenshots/"
NAME="screenshot_$(date +%d%m%Y_%H%M%S).png"

if [ ! -d $DIR ]; then
    mkdir $DIR
    notify-send ".config folder created."
fi

option2="Selected area"
option3="Fullscreen (delay 3 sec)"

options="$option2\n$option3"

choice=$(echo -e "$options" | rofi -dmenu -theme "$HOME/.config/rofi/launcher-wayland.rasi" -i -p "Take Screenshot")

case $choice in
    $option2)
        FILE="$DIR$(date +'%s.png')"
        REGION=$(slurp)
        sleep 0.1
        grim -g "$REGION" - | swappy -f - -o $FILE
        notify-send "Screenshot $FILE created" "Mode: Selected area"
    ;;
    $option3)
        sleep 3
        FILE="$DIR$(date +'%s.png')"
        grim - | swappy -f - -o $FILE
        notify-send "Screenshot $FILE created" "Mode: Fullscreen"
    ;;
esac
